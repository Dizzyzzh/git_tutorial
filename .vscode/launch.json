    "version": "0.2.0",
    "configurations": [
        {
            "name": "C++ Debug", // 调试配置显示名称
            "type": "cppdbg", // 调试器类型 (cppdbg = C++ Debug)
            "request": "launch", // 启动类型: launch 或 attach
            "program": "${workspaceFolder}/build/unittest1.exe", // 要调试的程序路径
            "args": [], // 命令行参数
            "stopAtEntry": false, // 是否在入口点暂停
            "cwd": "${workspaceFolder}", // 工作目录
            "environment": [], // 环境变量
            "externalConsole": false, // 是否使用外部终端
            "MIMode": "gdb", // 调试器: gdb 或 lldb
            "miDebuggerPath": "gdb.exe" // 调试器路径
        }
    ]
}